 <% if user_signed_in?%>
  <% if current_user.id != @product.user_id %>
    <%= form_with model:[@product,@comment],remote:true do|form| %>
      <%= form.text_area :feedback, class: "form-control",placeholder:"Write comment here" %>
      <br>
      <%= form.submit 'Comment',class:"btn btn-dark" %>
    <% end %>
  <% end %>
<%end%>
