<h1>Search Results</h1>
<%if @products.empty? %>
  <h6 class="text-black mb-4">Nothing to show</h6>
<%else%>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Serial Number</th>
        <th>Quantity</th>
        <th >Display</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.product_name %></td>
          <td><%= product.product_price %></td>
          <td><%= truncate(product.product_description, :length => 75) %></td>
          <td><%= product.product_serial_number %></td>
          <td><%= product.quantity %></td>
          <div>
            <td>
              <%= link_to 'Show', product %> </td>
          </div>
        </tr>
      <% end %>
    </tbody>
  </table>
<%end%>
