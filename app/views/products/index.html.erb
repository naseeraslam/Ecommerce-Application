<div class="container">
  <h3>Products</h3>
  <div class="mb-5">
    <%= link_to 'Add Product', new_product_path(@products) ,class:"btn btn-success float-end"%>
  </div>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Serial Number</th>
        <th>Quantity</th>
        <th colspan="3">Crud</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.product_name %></td>
          <td><%= product.product_price %></td>
          <td><%= truncate(product.product_description, :length => 75) %></td>
          <td><%= product.product_serial_number %></td>
          <td><%= product.quantity %></td>
          <div>
            <td>
              <%= link_to 'Show', product ,class:"btn btn-primary" %> </td>
            <td><%= link_to 'Edit', edit_product_path(product),class:"btn btn-primary" %></td>
            <td><%= button_to 'Delete', product, method: :delete , data: { confirm: 'Are you sure?' },class:"btn btn-primary card-link"  %></td>
          </div>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
